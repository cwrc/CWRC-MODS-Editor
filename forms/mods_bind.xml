			</fb:repeater>
			<fb:repeater id="texts" row-path="mods_text" parent-path=".">
				<fb:new id="common-textfield-class"/>
			</fb:repeater>
			<fb:new id="common-language-elements-class"/>
			<fb:new id="common-linking-elements-class"/>
